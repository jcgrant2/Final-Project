import java.util.Scanner;
import java.util.HashMap;

class Main {
  public static void main(String[] args) {
    Scanner keyboard = new Scanner(System.in);
    HashMap <String, Double> menu = new HashMap<>();

    System.out.println("Hi welcome to Olive Garden, what are your name for the order? ");
    String name = keyboard.nextLine();
    System.out.println("Nice to meet you " + name + " what would you like to order? (enter \"quit\" to end order)");
    String order = keyboard.nextLine();
    double total = 0;
    while(!order.equals("quit")){
      total += menu.get(order); 
      order = keyboard.nextLine();
    } 

    System.out.println("Total cost: $" + total + " Tip 10%: "+ (total*.10));
  }
}
